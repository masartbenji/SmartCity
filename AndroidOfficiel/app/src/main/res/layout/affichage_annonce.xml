<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/announcementRow"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/itemAffiche"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp">

        <ImageView
            android:id="@+id/image_annonce"
            android:layout_width="100dp"
            android:layout_height="100dp"

            android:layout_alignBottom="@+id/description_annonce"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="35dp"
            android:background="@color/colorPrimaryDark"
            android:visibility="visible" />

        <TextView
            android:id="@+id/title_annonce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/image_annonce"
            android:layout_toRightOf="@+id/image_annonce"
            android:text="Nom animal "
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/text_description_annonce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title_annonce"
            android:layout_toEndOf="@+id/image_annonce"
            android:layout_toRightOf="@+id/image_annonce"
            android:text="EspÃ¨ce :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_description_annonce"
            android:layout_toEndOf="@+id/image_annonce"
            android:layout_toRightOf="@+id/image_annonce"
            android:text="Race :"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/espece"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/text_description_annonce"
            android:layout_alignBottom="@+id/text_description_annonce"
            android:layout_toEndOf="@+id/text_description_annonce"
            android:layout_toRightOf="@+id/text_description_annonce"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/race"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="TextView"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>