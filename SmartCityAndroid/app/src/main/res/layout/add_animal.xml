<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/nameAddAnimalView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/nameAddAnimal"
        android:layout_alignParentStart="true"
        android:layout_marginStart="32dp"
        android:text="Nom :"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <EditText
        android:id="@+id/nameAddAnimal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="58dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/colorView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameAddAnimalView"
        android:layout_marginTop="130dp"
        android:text="Couleur :"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Spinner
        android:id="@+id/colorSpinnerAddAnimal"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/colorView"
        android:layout_alignStart="@+id/nameAddAnimal" />

    <TextView
        android:id="@+id/SpeciesView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/nameAddAnimalView"
        android:layout_marginTop="212dp"
        android:text="EspÃ¨ce :"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Spinner
        android:id="@+id/speciesSpinnerAddAnimal"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/SpeciesView"
        android:layout_alignStart="@+id/nameAddAnimal" />

    <TextView
        android:id="@+id/breedView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/nameAddAnimalView"
        android:layout_marginBottom="220dp"
        android:text="Race :"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Spinner
        android:id="@+id/breedSpinnerAddAnimal"
        android:layout_width="215dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/breedView"
        android:layout_alignStart="@+id/nameAddAnimal" />

    <Button
        android:id="@+id/addAnimalButton"
        android:layout_width="185dp"
        android:layout_height="72dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="111dp"
        android:text="Ajouter animal" />
</RelativeLayout>